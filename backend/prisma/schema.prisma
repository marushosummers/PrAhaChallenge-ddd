datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  previewFeatures = ["nativeTypes"]
  provider        = "prisma-client-js"
}

model Team {
  id        String    @id
  name      Int
  pairs     Pair[]
}

model Pair {
  id        String    @id
  name      String
  team      Team   @relation(fields: [teamId], references: [id])
  teamId    String
  members   Member[]
}

model Member {
  id        String    @id
  name      String
  email     String
  pair      Pair   @relation(fields: [pairId], references: [id])
  pairId    String
  activityStatus      String @default("ONGOING")
  memberTasks MemberTask[]
}

model Task {
  id        String    @id
  content      String
  memberTasks MemberTask[]
}

model MemberTask {
  id        String    @id
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    String
  task      Task   @relation(fields: [taskId], references: [id])
  taskId    String
  progressStatus String @default("InReview")
}
